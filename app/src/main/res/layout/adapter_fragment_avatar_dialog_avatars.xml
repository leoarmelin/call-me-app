<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:gravity="center_horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_adapter_fragment_avatar_dialog_avatars_container"
        android:layout_width="86dp"
        android:layout_height="86dp"
        app:cardBackgroundColor="@color/primary"
        app:cardCornerRadius="43dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_adapter_fragment_avatar_dialog_avatars_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="@string/iv_adapter_fragment_avatar_dialog_avatars_avatar_contentDescription"
                tools:src="@raw/meditating" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>